    "schemas" : {
      "DiscrepancyReport" : {
        "type" : "object",
        "properties" : {
          "obliged-entity-name" : {
            "type" : "string",
            "example" : "Barclays Bank"
          },
          "obliged-entity-email" : {
            "type" : "string",
            "example" : "bob.holness@barclaysbank.com"
          },
          "company-number" : {
            "type" : "string",
            "example" : "AB export"
          },
          "status" : {
            "type" : "string",
            "enum" : [ "INCOMPLETE", "COMPLETE", "INVALID", "SUBMITTED", "DELETED", "FAILED_TO_SUBMIT" ],
            "example" : "SUBMITTED"
          },
          "links" : {
            "type" : "object",
            "properties" : {
              "self" : {
                "type" : "string"
              }
            }
          },
          "etag" : {
            "type" : "string",
            "example" : "33a64df551425fcc55e4d42a148795d9f25f89d4"
          },
          "kind" : {
            "type" : "string",
            "example" : ""
          }
        }
      },
      "Discrepancy" : {
        "properties" : {
          "discrepancy-reason" : {
            "type" : "string",
            "example" : "Name is incorrect"
          },
          "links" : {
